<section>
    <div class="container">
        <h1>Add New Institution</h1>
        <hr>
        <%= form_for @education do |f| %>
        <div>
            <%= f.label :institution %>
            <%= f.text_field :institution, :placeholder => "Institution" %> 
        </div>
        <div>
            <%= f.label :course %>
            <%= f.text_field :course, :placeholder => "Course" %> 
        </div>
        <div>
            <%= f.label :start_date %>
            <%= f.text_field :start_date, :placeholder => "Start" %> 
        </div>
        <div>
            <%= f.label :end_date %>
            <%= f.text_field :end_date, :placeholder => "End" %> 
        </div>
        <%= f.submit %>
        <% end %>
    </div><!-- /.container -->
</section>
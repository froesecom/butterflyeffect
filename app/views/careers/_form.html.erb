<section>
    <div class="container">
        <h1>Add New Job</h1>
        <hr>
        <%= form_for @career do |f| %>
        <div>
            <%= f.label :job_title %>
            <%= f.text_field :job_title, :placeholder => "Job Title" %> 
        </div>
        <div>
            <%= f.label :job_description %>
            <%= f.text_field :job_description, :placeholder => "Description" %> 
        </div>
        <div>
            <%= f.label :company %>
            <%= f.text_field :company, :placeholder => "Company" %> 
        </div>
        <div>
            <%= f.label :start_date %>
            <%= f.text_field :start_date, :placeholder => "Start" %> 
        </div>
        <div>
            <%= f.label :end_date %>
            <%= f.text_field :end_date, :placeholder => "End" %> 
        </div>
        <%= f.submit %>
        <% end %>
    </div><!-- /.container -->
</section>
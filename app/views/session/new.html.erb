<section>
    <div class="container">
        <h1>Sign In</h1>
        <hr>  
        <%= form_tag "/login" do %>
            <div>
            <%= label_tag :name %>
            <%= text_field_tag :email, nil, :placeholder => 'Enter email' %>
            
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, :placeholder => 'Enter password' %>
            </div>
            <%= submit_tag 'Confirm' %>
        <% end %>
    </div><!-- /.container -->
</section>